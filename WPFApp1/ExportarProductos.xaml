<Window x:Class="WPFApp1.ExportarProductos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d" FontFamily="Roboto" FontSize="18" WindowStartupLocation="CenterScreen"
        Title="Exportar Productos" Height="450" Width="800" Closed="Window_Closed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Iconos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
            <SolidColorBrush x:Key="ThrobberFillBrush" Color="Gray"/>
            <Path x:Key="PruebaThrobber" Stroke="Black" StrokeThickness="2">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="10,1">
                            <ArcSegment x:Name="Arco1" Size="9,9" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="19,10"/>
                            <ArcSegment x:Name="Arco2" Size="9,9" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="10,19"/>
                            <ArcSegment x:Name="Arco3" Size="9,9" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="1,10"/>
                            <ArcSegment x:Name="Arco4" Size="9,9" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="10,1"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Button x:Name="ExportarXLSX" Content="Exportar a Excel" Margin="5" Command="{Binding ExportarXLSXCommand}"/>
            <Border Margin="5">
                <ContentControl x:Name="Throbber"
                    Visibility="{Binding ExportacionEnProceso, Converter={StaticResource BooleanToVisibility}}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <ContentControl.Content>
                        <Path Style="{StaticResource ThrobberSimpleEstilo}"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Path.RenderTransform>
                            <Path.RenderTransformOrigin>
                                <Point X="0.5" Y="0.5"/>
                            </Path.RenderTransformOrigin>
                        </Path>
                    </ContentControl.Content>
                </ContentControl>
            </Border>
        </StackPanel>
    </Grid>
</Window>
