<Window x:Class="WPFApp1.EntradaUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d" FontSize = "18" FontFamily="Roboto" FontWeight="Light"
        Title="EntradaUsuario" Height="200" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" Text="Entrada" 
            FontWeight="Regular" Grid.ColumnSpan="1" Margin="0,0,0,10"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="campoEntrada"/>
        <Button x:Name="Submit" Grid.Row="3" Grid.Column="1" Content="Aceptar" Margin="4" Click="Submit_Click"/>
    </Grid>
</Window>
