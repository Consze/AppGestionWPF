<Window x:Class="WPFApp1.AniadirProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1" MinWidth="250"
        mc:Ignorable="d" FontFamily="Roboto" FontSize="15" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        Title="{Binding NombreDeVentana}" Height="600" Width="500" Closed="Window_Closed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Iconos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--General-->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
            <TextBlock Margin="2" FontSize="18">General</TextBlock>
            <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="2">
                <StackPanel Margin="5" Orientation="Vertical">

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Nombre" FontWeight="ExtraLight"/>
                        <TextBox x:Name="CampoNombre" Text="{Binding NombreProducto}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Visibility="{Binding ItemConCategoria, Converter={StaticResource BooleanToVisibility}}">
                        <TextBlock Text="Categoria" FontWeight="ExtraLight"/>
                        <TextBox x:Name="CampoCategoria" Text="{Binding CategoriaProducto}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!--Imagen-->
        <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="2"
            Grid.Row="1" Grid.Column="2" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="0.5" Margin="5" Style="{StaticResource EstiloBorderConAnimacion}"
                    Width="{Binding AnchoImagenSeleccionada}" Height="{Binding AltoImagenSeleccionada}" Grid.RowSpan="2" Grid.Row="0">
                    <Image x:Name="PlaceHolder" Source="{Binding RutaImagenSeleccionada}"/>
                </Border>
                <Button x:Name="ElegirImagen" Content="Elegir Imagen" Command="{Binding ElegirImagenCommand}" Margin="5" FontSize="16" FontWeight="ExtraLight" Grid.Row="2"/>
            </Grid>
        </Border>

        <!--Precio y Stock-->
        <StackPanel Grid.Row="2" Grid.Column="1">
            <TextBlock Margin="2" FontSize="18">Precio y Stock</TextBlock>
            <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="2" Margin="5">
                <StackPanel Orientation="Vertical" Grid.Row="1" Margin="5">
                        <TextBlock Text="Precio" FontWeight="ExtraLight" Grid.Column="0"/>
                        <TextBox x:Name="campoPrecio" Text="precio" Grid.Column="1" Margin="0,0,0,7"/>
                        
                        <TextBlock Text="Haber" FontWeight="ExtraLight" />
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="Restar" Margin="0" BorderThickness="0" Command="{Binding AniadirProductoCommand}">
                                <Button.Background>
                                    <SolidColorBrush Color="Transparent"/>
                                </Button.Background>
                                <Image Width="20" Height="24" Source="/iconos/restar1.png" Style="{StaticResource ImagenHover}"/>
                            </Button>
                            <TextBlock Text="1" FontWeight="Medium" Margin="5"/>
                            <Button x:Name="Aniadir" Margin="0" BorderThickness="0" Command="{Binding AniadirProductoCommand}">
                                <Button.Background>
                                    <SolidColorBrush Color="Transparent"/>
                                </Button.Background>
                                <Image Width="24" Height="24" Source="/iconos/sumar1.png" Style="{StaticResource ImagenHover}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

            </Border>
        </StackPanel>
        

        <!--Booleanas-->
        <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
            <TextBlock Margin="2" FontSize="18">Catalogo Publico</TextBlock>
            <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="2">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CheckBox IsChecked="{Binding VisibilidadWeb}" Grid.Row="0">
                        <TextBlock FontWeight="Light">Visibilidad Web</TextBlock>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding PrecioPublico}" Grid.Row="1">
                        <TextBlock FontWeight="Light">Precio Publico</TextBlock>
                    </CheckBox>
                </Grid>
            </Border>
        </StackPanel>

        <!--Boton de Submit-->
        <Border BorderBrush="Black" BorderThickness="0.25" CornerRadius="2" Grid.Row="5" Grid.Column="1" Margin="5" Grid.ColumnSpan="2">
            <Button x:Name="BotonAñadir" Content="Almacenar" FontSize="18" FontWeight="Bold" Command="{Binding BotonPresionadoCommand}"/>
        </Border>
    </Grid>
</Window>
