<UserControl x:Class="WPFApp1.Vistas.PanelSecundarioCatalogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApp1.Vistas"
             mc:Ignorable="d" FontSize="18" FontFamily="Roboto"
             d:DesignHeight="720" d:DesignWidth="200">
    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Iconos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>

            <Style TargetType="ListBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="0"/>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                            Storyboard.TargetProperty="Opacity" 
                            From="0.0" 
                            To="1.0" 
                            Duration="0:0:0.25"/>

                                <ThicknessAnimation
                            Storyboard.TargetProperty="Margin"
                            From="0, -15, 0, 0" To="0"               
                            Duration="0:0:0.10"/>

                                <ColorAnimationUsingKeyFrames
                            Storyboard.TargetProperty="(ListBoxItem.Background).(SolidColorBrush.Color)"
                            Duration="0:0:0.7">
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.0" Value="LightSkyBlue"/>

                                    <DiscreteColorKeyFrame KeyTime="0:0:0.15" Value="White"/>

                                    <DiscreteColorKeyFrame KeyTime="0:0:0.30" Value="LightSkyBlue"/>

                                    <DiscreteColorKeyFrame KeyTime="0:0:0.45" Value="White"/>

                                    <DiscreteColorKeyFrame KeyTime="0:0:0.7" Value="Transparent"/>

                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="GhostWhite">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Margin="15,10" 
            Style="{StaticResource EstiloBorderConAnimacion}" Background="White"
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
              ShadowDepth="0.1"
              Direction="0"
              Opacity="0.1"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Button Style="{StaticResource BotonSinEstilo}" Margin="0,10" Command="{Binding VerListaCarritoCommand}" Grid.Column="1" Grid.Row="1">
                        <Image Source="/iconos/carrito1.png" Width="35" Height="35" HorizontalAlignment="Left"/>
                    </Button>

                    <TextBlock Text="{Binding ContadorItemsElegidos, StringFormat='Items Seleccionados: {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"
                        Margin="5,0,0,0" Grid.Row="1">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Light"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

            </Border>

            <ListBox Grid.Row="1" ItemsSource="{Binding ColeccionProductosVenta}" Grid.ColumnSpan="2" Grid.Column="0"
                     Margin="10" Visibility="{Binding MostrarListaProductos, Converter={StaticResource BooleanToVisibility}}"
                     MaxHeight="400" Height="400" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="0">
                                    <TextBlock Text="{Binding ItemVendido.Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0"/>
                                    
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding ModoLecturaActivo, Converter={StaticResource BooleanToVisibility}}">
                                        <TextBlock Text="{Binding precioVenta, StringFormat=' - {0:C}'}"/>
                                        <TextBlock Text="{Binding Cantidad, StringFormat=' - x{0} -'}" FontWeight="Bold" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Visibility="{Binding ModoEdicionActivo, Converter={StaticResource BooleanToVisibility}}">
                                        <TextBox Text="{Binding precioVenta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="70" Margin="5,0"/>
                                        <TextBox Text="{Binding Cantidad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50" FontWeight="Bold"/>
                                    </StackPanel>

                                    <ComboBox ItemsSource="{Binding DataContext.ColeccionMediosPago, 
                                        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                                        SelectedValue="{Binding MedioPagoID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayMemberPath="Nombre" SelectedValuePath="ID" Margin="15,0,0,0"/>  
                                </StackPanel>

                                <Button Style="{StaticResource BotonSinEstilo}" Margin="40,0,0,0" Command="{Binding DataContext.ModificarItemCommand, RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}" Grid.Column="2">
                                    <Image Source="/iconos/lapizEdicion.png" Width="15" Height="15" VerticalAlignment="Center"/>
                                </Button>

                                <Button Style="{StaticResource BotonSinEstilo}" Margin="10,0,15,0" Command="{Binding DataContext.EliminarItemCommand, RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}" Grid.Column="3">
                                    <Image Source="/iconos/Cruz2.png" Width="15" Height="15" VerticalAlignment="Center"/>
                                </Button>
                            </Grid>
                            
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ScrollViewer.VerticalScrollBarVisibility>
                    Auto
                </ScrollViewer.VerticalScrollBarVisibility>
            </ListBox>


            <!--Opciones (sucursal, fecha de venta)-->
            <Grid Visibility="{Binding MostrarOpcionesFlag, Converter={StaticResource BooleanToVisibility}}" Grid.Row="2" Margin="10">
                <ComboBox ItemsSource="{Binding ColeccionSucursales}" SelectedValue="{Binding SucursalID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    DisplayMemberPath="Nombre" SelectedValuePath="ID" Margin="15,0,0,0"/>
            </Grid>

            <Button x:Name="BotonOpciones" Content="Opciones" FontSize="18" FontWeight="Regular" Command="{Binding MostrarOpcionesCommand}"
                    Grid.Row="3" Grid.Column="0" Margin="10" Padding="10"/>
            <Border BorderBrush="Black" BorderThickness="0.25"  Grid.Row="3" Margin="10" Grid.Column="1">
                <Button x:Name="BotonRegistrarVenta" Content="Registrar Venta" FontSize="18" FontWeight="Bold" Command="{Binding RegistrarVentaCommand}" Style="{StaticResource BotonToggleEstilo}"
                        IsEnabled="{Binding BotonHabilitado}" Padding="10"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
