<UserControl x:Class="WPFApp1.Vistas.PanelSecundarioCatalogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApp1.Vistas"
             mc:Ignorable="d" FontSize="18" FontFamily="Roboto"
             d:DesignHeight="720" d:DesignWidth="200">
    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Iconos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="GhostWhite">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Margin="15,10" 
            Style="{StaticResource EstiloBorderConAnimacion}" Background="White"
            Grid.Row="0" Grid.Column="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
              ShadowDepth="0.1"
              Direction="0"
              Opacity="0.1"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Button Style="{StaticResource BotonSinEstilo}" Margin="0,10" Command="{Binding VerListaCarritoCommand}" Grid.Column="1" Grid.Row="1">
                        <Image Source="/iconos/carrito1.png" Width="35" Height="35" HorizontalAlignment="Left"/>
                    </Button>

                    <TextBlock Text="{Binding ContadorItemsElegidos, StringFormat='Items Seleccionados: {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"
                        Margin="5,0,0,0" Grid.Row="1">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Light"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

            </Border>

            <ListBox Grid.Row="1" ItemsSource="{Binding ColeccionProductosVenta}"
                     Margin="10" Visibility="{Binding MostrarListaProductos, Converter={StaticResource BooleanToVisibility}}"
                     MaxHeight="400" Height="400" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="0">
                                    <TextBlock Text="{Binding ItemVendido.Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0"/>
                                    <TextBlock Text="{Binding ItemVendido.Precio, StringFormat=' - {0:C}'}"/>
                                    <TextBlock Text="{Binding Cantidad, StringFormat=' X {0}'}" FontWeight="Bold"/>
                                    <ComboBox ItemsSource="{Binding DataContext.ColeccionMediosPago, 
                                        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                                        SelectedValue="{Binding MedioPagoID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayMemberPath="Nombre" SelectedValuePath="ID"/>  

                                </StackPanel>
                                
                                <Button Style="{StaticResource BotonSinEstilo}" Margin="40,0,15,0" Command="{Binding DataContext.EliminarItemCommand, RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}" Grid.Column="2">
                                    <Image Source="/iconos/Cruz2.png" Width="15" Height="15" VerticalAlignment="Center"/>
                                </Button>
                            </Grid>
                            
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ScrollViewer.VerticalScrollBarVisibility>
                    Auto
                </ScrollViewer.VerticalScrollBarVisibility>
            </ListBox>

            <Border BorderBrush="Black" BorderThickness="0.25"  Grid.Row="2" Margin="10">
                <Button x:Name="BotonRegistrarVenta" Content="Registrar Venta" FontSize="18" FontWeight="Bold" Command="{Binding RegistrarVentaCommand}" Style="{StaticResource BotonToggleEstilo}"
                        IsEnabled="{Binding BotonHabilitado}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
