<Window x:Class="WPFApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WPFApp1.ViewModels"
        xmlns:local="clr-namespace:WPFApp1"
        xmlns:view="clr-namespace:WPFApp1.Vistas" mc:Ignorable="d"
        FontSize = "18" FontWeight="Light" FontFamily="Roboto" UseLayoutRounding="True"
        Title="Aplicación" Height="720" Width="1280" Closing="Window_Closing" WindowState="Maximized">
    <Window.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Iconos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
            <DataTemplate DataType="{x:Type vm:CatalogoViewModel}">
                <view:Catalogo />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PanelSecundarioCatalogoViewModel}">
                <view:PanelSecundarioCatalogo />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PanelSecundarioEdicionLoteViewModel}">
                <view:PanelSecundarioEdicionLote />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#708090">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <ItemsControl x:Name="PanelNotificaciones" ItemsSource="{Binding ColeccionNotificaciones}" 
            SnapsToDevicePixels="True" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,25"
            HorizontalAlignment="Center" Panel.ZIndex="1000" Grid.ColumnSpan="{Binding panelNotificacionesColumnas}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <StaticResource ResourceKey="NotificationItemEnterAnimation"/>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="0.25" Margin="5" Padding="10" Style="{StaticResource EstiloBorderConAnimacion}" CornerRadius="10" Background="White">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
            Command="{Binding DataContext.DobleClickNotificacionCommand,
                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
            CommandParameter="{Binding}"/>
                        </Border.InputBindings>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
               ShadowDepth="0.1"
               Direction="0"
               Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel Orientation="Vertical">
                            <StackPanel  Orientation="Horizontal" Margin="2">
                                <Border Width="15" Height="15" Margin="0,0,5,0">
                                    <Image Source="{Binding Path=IconoRuta}"/>
                                </Border>
                                <TextBlock FontWeight="Bold" Text="{Binding Path=Titulo}"/>
                            </StackPanel>
                            <TextBlock FontSize="14" Text="{Binding Path=Mensaje}" FontWeight="Regular"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" 
                Background="GhostWhite" Grid.RowSpan="2" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="12,20,0,0" Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}">
                        <Image Source="/ico128.ico" Width="15" Height="15" Margin="3,0,3,0"/>
                        <TextBlock FontSize="16" Text="Bienvenido" FontWeight="ExtraLight" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="ColapsarFormato" BorderThickness="0" Grid.Row="0" Grid.Column="2"
                            Command="{Binding ColapsarPanelCommand}" IsTabStop="False" Margin="10">
                        <Button.Background>
                            <SolidColorBrush Color="Transparent"/>
                        </Button.Background>
                        <Image Margin="4"  Width="18" Height="22" Stretch="Fill" Source="{Binding iconoTogglePanel}"/>
                    </Button>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1">
                        <TextBlock FontSize="36" Text="{Binding TituloActivo}" FontWeight="Regular" Margin="10,0,10,0" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}"/>
                        <!--Throbber-->
                        <Border Margin="4,0,0,0">
                            <ContentControl x:Name="Throbber" Visibility="{Binding Procesando, Converter={StaticResource BooleanToVisibility}}">
                                <ContentControl.Content >
                                    <Path Style="{StaticResource ThrobberSimpleEstilo}"
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path.RenderTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Path.RenderTransform>
                                        <Path.RenderTransformOrigin>
                                            <Point X="0.5" Y="0.5"/>
                                        </Path.RenderTransformOrigin>
                                    </Path>
                                </ContentControl.Content>
                            </ContentControl>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Row="2" FontSize="16" Text="herramientas" FontWeight="ExtraLight" 
                               Margin="12,0,0,20" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}"/>
                </Grid>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Margin="15,10" Cursor="Hand"
                            Style="{StaticResource EstiloBorderConAnimacion}" Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="0.1"
                                  Direction="0"
                                  Opacity="0.1"/>
                        </Border.Effect>
                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding VerCatalogoCommand}" />
                        </Border.InputBindings>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.InputBindings>
                                <MouseBinding Gesture="LeftClick"/>
                            </StackPanel.InputBindings>
                            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding VerCatalogoCommand}">
                                <Image Source="/iconos/Stack.png" Width="35" Height="35" HorizontalAlignment="Left"/>
                            </Button>
                            <TextBlock Text="Ver Catalogo" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Margin="0,0,20,0" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Light"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=TituloActivo}" Value="Catálogo">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Margin="15,10" Cursor="Hand"
                            Style="{StaticResource EstiloBorderConAnimacion}" Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
              ShadowDepth="0.1"
              Direction="0"
              Opacity="0.1"/>
                        </Border.Effect>
                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding ConfigurarServidorCommand}" />
                        </Border.InputBindings>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.InputBindings>
                                <MouseBinding Gesture="LeftClick"/>
                            </StackPanel.InputBindings>
                            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding ConfigurarServidorCommand}">
                                <Image Source="/iconos/Server.png" Width="35" Height="35"/>
                            </Button>
                            <TextBlock Text="Conexión a SQL Server" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" Margin="0,0,20,0" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Light"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=TituloActivo}" Value="Conectarse a Servidor">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Margin="15,10" Cursor="Hand"
                            Style="{StaticResource EstiloBorderConAnimacion}" Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                              ShadowDepth="0.1"
                              Direction="0"
                              Opacity="0.1"/>
                        </Border.Effect>
                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding VerExportarProductosCommand}" />
                        </Border.InputBindings>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.InputBindings>
                                <MouseBinding Gesture="LeftClick"/>
                            </StackPanel.InputBindings>
                            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding VerExportarProductosCommand}">
                                <Image Source="/iconos/exportar_xlsx.png" Width="35" Height="35"/>
                            </Button>
                            <TextBlock Text="Exportar Productos a XLSX" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" Margin="0,0,20,0" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Light"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=TituloActivo}" Value="Exportar Productos">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Margin="15,10" Cursor="Hand" 
                            Style="{StaticResource EstiloBorderConAnimacion}" Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                          ShadowDepth="0.1"
                          Direction="0"
                          Opacity="0.1"/>
                        </Border.Effect>
                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding AbrirConfiguracionesCommand}" />
                        </Border.InputBindings>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.InputBindings>
                                <MouseBinding Gesture="LeftClick"/>
                            </StackPanel.InputBindings>
                            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding AbrirConfiguracionesCommand}">
                                <Image Source="/iconos/configuracion.png" Width="35" Height="35"/>
                            </Button>
                            <TextBlock Text="Configuraciones" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Margin="0,0,20,0" Visibility="{Binding ToggleMostrarPanel, Converter={StaticResource BooleanToVisibility}}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="15,0,0,0" Background="GhostWhite">
            <Grid>
                <ContentPresenter x:Name="ContenedorVistas" Content="{Binding VistaActual}" Style="{StaticResource TransicionContenido}" Opacity="0"/>
                <Border Background="#A0FFFFFF" Visibility="{Binding IsAniadirProductoActivo, Converter={StaticResource BooleanToVisibility}}"
                IsHitTestVisible="False"
                CornerRadius="10"/>
            </Grid>
        </Border>

        <Grid Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="ColapsarPanelSecundario" BorderThickness="0" Grid.Row="0" Visibility="{Binding ToggleIconoPanelSecundario, Converter={StaticResource BooleanToVisibility}}"
                Command="{Binding ColapsarPanelSecundarioCommand}" IsTabStop="False" Margin="10" VerticalAlignment="Center">
                <Button.Background>
                    <SolidColorBrush Color="Transparent"/>
                </Button.Background>
                <Image Margin="4"  Width="18" Height="22" Stretch="Fill" Source="{Binding iconoTogglePanelSecundario}"/>
            </Button>

            <Border BorderBrush="Black" Grid.RowSpan="2" Grid.Row="1"
                BorderThickness="1" CornerRadius="10" Margin="15,0,0,0" Background="GhostWhite"
                Visibility="{Binding TogglePanelSecundario, Converter={StaticResource BooleanToVisibility}}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="30,30,10,10"  Grid.Row="0" Text="{Binding TituloPanelSecundario}" FontSize="20"/>
                    <ContentPresenter Margin="10,0,10,0" Grid.Row="1" x:Name="PanelSecundario" Content="{Binding VistaPanelSecundario}" 
                     Style="{StaticResource TransicionContenido}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
