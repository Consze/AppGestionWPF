<Window x:Class="WPFApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d" FontSize = "18" FontWeight="Light" FontFamily="Roboto"
        Title="Ventana" Height="720" Width="1280" Closing="Window_Closing" WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Iconos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid x:Name="MiGrilla">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Background="WhiteSmoke">
            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding VerCatalogoCommand}">
                <Image Source="/iconos/Stack.png" Width="40" Height="40"/>
            </Button>
            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding VerExportarProductosCommand}">
                <Image Source="/iconos/exportar_xlsx.png" Width="40" Height="40"/>
            </Button>
            <Button Style="{StaticResource BotonSinEstilo}" Margin="10" Command="{Binding ConfigurarServidorCommand}">
                <Image Source="/iconos/Server.png" Width="40" Height="40"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock FontSize="36" Text="Menu" FontWeight="Regular" Margin="10"/>
            <Button x:Name="verCatalogo" Content="Ver Catalogo" Margin="10" Command="{Binding VerCatalogoCommand}"/>
            <Button x:Name="aniadirProducto" Content="Añadir Producto" Margin="10" Command="{Binding AniadirProductoCommand}"/>
            <Button x:Name="exportarProductos" Content="Exportar Productos a Excel" Margin="10" Command="{Binding VerExportarProductosCommand}"/>
            <Button x:Name="verLista" Content="Ver Personas" Margin="10" Command="{Binding VerListaCommand}"/>
            <Button x:Name="aniadirPersona" Content="Añadir Persona" Margin="10" Command="{Binding AniadirPersonaCommand}"/>
            <Button x:Name="eliminarPersona" Content="Eliminar Persona" Margin="10" Command="{Binding EliminarPersonaCommand}"/>
            <Button x:Name="editarPersona" Content="Editar Persona" Margin="10" Command="{Binding EditarPersonaCommand}"/>
        </StackPanel>
        <ContentPresenter x:Name="ContenedorVistas" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Content="{Binding VistaActual}"/>
    </Grid> 
</Window>
