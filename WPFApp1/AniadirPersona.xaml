<Window x:Class="WPFApp1.AniadirPersona"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d" FontSize = "18" FontFamily="Roboto" FontWeight="Light"
        Title="AniadirPersona" Height="250" Width="315">
    <Grid x:Name="MiGrilla">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" Text="Añadir Persona" 
                FontWeight="Regular" Grid.ColumnSpan="3" Margin="0,0,0,10"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Nombre"/>
        <TextBox x:Name="CampoNombre" Margin="2" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="CampoAltura" Margin="2" Grid.Column="2" Grid.Row="3"/>
        <TextBox x:Name="CampoPeso" Margin="2" Grid.Column="2" Grid.Row="4"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Altura"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Peso"/>
        <Button x:Name="submit" Content="Ingresar" Grid.Column="1" Grid.Row="5" Margin="0,10" Click="submit_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
