<Window x:Class="WPFApp1.AniadirProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d" FontFamily="Roboto" FontSize="18"
        Title="AniadirProducto" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="0" Margin="5"
                Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Width="{Binding AnchoImagenSeleccionada}" Height="{Binding AltoImagenSeleccionada}" >
            <Image x:Name="PlaceHolder" Source="{Binding RutaImagenSeleccionada}"/>
        </Border>
        <Button x:Name="ElegirImagen" Grid.Row="1" Grid.Column="1" Content="Elegir Imagen" Command="{Binding ElegirImagenCommand}"/>
    </Grid>
</Window>
